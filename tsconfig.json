{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"lib": ["ES2021"],
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node"
	},
	"include": ["nodes/**/*", "credentials/**/*"],
	"exclude": ["node_modules", "dist"]
}

